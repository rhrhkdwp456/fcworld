    <%- include('nav.ejs') %>
    

    <form class="form-box" action="/add" method="POST" enctype="multipart/form-data">
        <h4>글쓰기</h4>
        <input name = "title" type="text" placeholder="제목 입력">
        <input name = "content" type="text" placeholder="내용 입력">
        <input name = "img1" type="file" accept="image/*" >
        <button type="submit">전송</button>
    </form> 

    <!-- 이미지 업로드 기능 만드는 방법.
